server {
    listen      80;
    server_name  _;
    large_client_header_buffers 4 32k;
    real_ip_header X-Forwarded-For;

    root /home/pybossa-analyst;

    client_max_body_size 5M;

    location / { try_files $uri @pybossa-analyst; }

    location @pybossa-analyst {
        include uwsgi_params;
        uwsgi_pass unix:/tmp/pybossa-analyst.sock;
    }

}